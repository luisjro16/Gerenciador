<div class="container mt-5">
  <div class="row justify-content-center mt-5">
    <div class="col-auto">
      <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
        <div class="btn-group me-5 md-5" role="group" aria-label="Dropdown com intervalo de salário">
          
        </div>
        <div class="btn-group me-2" role="group" aria-label="Second group">
          <button type="button" class="btn btn-primary custom-margin-left">
            <%= link_to "Adicionar Usuário", new_user_path, class: "plain-link"%>
          </button>
        </div>

      </div>
    </div>
  </div>
</div>

<style>
  .dropdown-toggle:focus {
    outline: none;
    box-shadow: none;
  }

  .dropdown-menu {
    padding: 15px;
    transition: none;
  }

  .dropdown-item {
    pointer-events: auto;
  }

  .dropdown-item:hover, .dropdown-item:focus {
    background-color: #f8f9fa;
  }
</style>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-7">
      <table class="table mt-2">
        <thead style="text-align: center; vertical-align: middle;">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        
        <tbody style="text-align: center; vertical-align: middle;">
          <% @users.each do |user| %>
            <tr class="-3">
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= link_to (image_tag "ver.png"), admin_user_path(user) %></td>
              <td><%= link_to (image_tag "editar.png"), edit_admin_user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
