<div class="container mt-5">
  <div class="row">
    <!-- Coluna para a foto -->
    <div class="col-md-3">
      <% if @user.photo.attached? %>
        <%= image_tag @user.photo, alt: "Foto do Funcionário", class: "img-fluid rounded w-70" %>
      <% else %>
        <%= image_tag "anonimo.png", alt: "Foto Padrão", class: "img-fluid rounded w-70" %>
      <% end %>
    </div>

    <!-- Coluna para o conteúdo -->
    <div class="col-md-9">
      <div class="card">
        <div class="card-body position-relative">


          <div class="position-absolute top-0 end-0 p-2">
            <%= button_to @user, method: :delete, form: {data: { turbo_confirm: "Você tem certeza?" }}, style: "background: none; border: none; padding: 0; box-shadow: none;" do %>
              <%= image_tag "lixeira.png", alt: "Apagar", style: "width: auto; height: auto;" %>
            <% end %>
          </div>

          <h4 class="card-title">Nome Completo: <strong><%= @user.full_name %></strong></h4>
          
          <p class="card-text"><strong>Cargo:</strong> <%= @user.position %></p>
          <p class="card-text"><strong>Telefone:</strong> <%= @user.formatted_phone %></p>
          <p class="card-text"><strong>E-mail:</strong> <%= @user.email %></p>
          <p class="card-text"><strong>Status:</strong> 
          
          <% if @user.status == 'active' %>
            <%= "Ativo" %>
          <% elsif @user.status == 'inactive' %>
            <%= "Inativo" %>
          <% else %>
            <%= "Em Licença" %>
          <% end %>

          </p>

          <p class="card-text"><strong>Salário:</strong> <%= number_to_currency(@user.salary, unit: "R$", separator: ",", delimiter: ".", precision: 2) %></p>

          <!-- Botão para exibir dados sensíveis -->
          <button class="btn btn-warning mt-3" onclick="toggleSensitiveData()">Exibir Dados Sensíveis</button>

          <%= link_to 'Voltar', users_path, class: 'btn btn-warning mt-3' %>

          <!-- Dados sensíveis ocultos -->
          <div id="sensitive-data" style="display: none;" class="mt-3">
            <p class="card-text"><strong>CPF:</strong> <%= @user.formatted_cpf %></p>
            <p class="card-text"><strong>RG:</strong> <%= @user.rg %></p>
            <p class="card-text"><strong>Endereço:</strong> <%= @user.full_address %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function toggleSensitiveData() {
    var sensitiveData = document.getElementById('sensitive-data');
    if (sensitiveData.style.display === 'none') {
      sensitiveData.style.display = 'block';
    } else {
      sensitiveData.style.display = 'none';
    }
  }
</script>
